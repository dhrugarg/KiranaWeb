<%- include("partials/header") %>			
<!-- main data -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<div class='container'>
<div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% products.forEach(function(product){ %>
			 <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card">
                            <img class="card-img-top img-fluid" src="<%= product.image %>">
							<div class='card-body'>
								<h5 class="card-title"><%= product.title %> <p class='text-right d-inline pull-right'> $<%= product.price %></p></h5>
								<p class="card-text"><%= product.description%> </p>
								<a href="/add-to-cart/<%= product._id%>" class="btn btn-primary"><i class="fas fa-cart-plus"></i></a>
								<a href="#" class="btn btn-primary">Buy now</a>
							</div>
                        </div>
             </div>
        <% }); %>
    </div>
</div>